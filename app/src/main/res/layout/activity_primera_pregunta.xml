<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fondo"
    android:layout_height="match_parent"
    tools:context=".PrimeraPreguntaActivity">

    <TextView
        android:id="@+id/primerapregunta"
        android:layout_width="281dp"
        android:layout_height="128dp"
        android:text="@string/primera_pregunta"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <RadioGroup
        android:layout_width="304dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primerapregunta"
        app:layout_constraintVertical_bias="0.276"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/decision_propia"
            android:layout_width="281dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:text="@string/decision_propia"
            android:textColor="@color/colorPrimary"
            android:onClick="onclick"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/recomendacion_sanitaria"
            android:layout_width="283dp"
            android:layout_height="75dp"
            android:text="@string/recomendacion_sanitaria"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:onClick="onclick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/decision_propia"
            app:layout_constraintVertical_bias="0.079" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>