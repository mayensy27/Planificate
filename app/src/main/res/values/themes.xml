<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Planificate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#261129</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        //puntero EditText
        <item name="colorSecondaryVariant">@color/teal_700</item>
        //linea EditText
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        //color de las lineas, radiobuttons, calendario..
    </style>

    //para cambiar el color del calendario

    <style name="Theme.Planificate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--    tema para modificar el tamaÃ±o de la letra del menu lateral-->
    <style name="Theme.Planificate.ModificarLetraNavDrawer">
        <item name="android:textSize">100sp</item>

    </style>

    <style name="Theme.Planificate.Popup">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    //actividad transparente

    <style name="Theme.Planificate.Sms">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="Theme.Planificate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Planificate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>