<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cat.urv.deim.asm.p2.planificate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Planificate"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup">

        <activity
            android:name=".Popup"
            android:theme="@style/Theme.Planificate.Popup"
            />

        <activity
            android:name=".Popup2"
            android:theme="@style/Theme.Planificate.Popup"
            />


        <activity android:name=".TimePickerDialog" />

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".TimePickerDialog"
            android:theme="@style/Theme.Planificate.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TimePickerDialog" />
        </activity>

        <activity android:name=".SegudaPreguntaActivity" />

        <activity android:name=".WebDecisionesCompartidas" />

        <activity android:name=".PrimeraPreguntaActivity" />

        <activity
            android:name=".InformacionActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".AlertReceiver" />

    </application>

</manifest>